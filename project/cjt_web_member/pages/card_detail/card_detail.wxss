/* pages/card_detail/card_detail.wxss */
.card-detail-img {
  position: relative;
  padding: 20rpx;
  height: 330rpx;
  width: 600rpx;
  margin: auto;
}
.card-detail-top {
  height: 500rpx;
  background-color: #fff;
}
.card-bg-img {
  width: 100%;
  height: 100%
}
/* vip卡片 */
.ld-img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 90rpx;
  left: 50rpx;
}

/* 卡片里面的内容 */

.card-text {
  color: #fff;
  position: absolute;
  top: 90rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
  text-indent: 110rpx;
}

.card-text text {
  font-size: 26rpx;
}

.card-text text:nth-child(3) {
  margin-top: 30rpx;
}

.card-text text:nth-child(3) .card-rebate {
  color: rgb(238, 189, 82);
  margin-right: 10rpx;
  font-size: 36rpx;
}
.allMoney{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.allMoney>view {
  display: flex;
  flex-direction:column;
  text-align: center;
  font-size: 30rpx;
}
.allMoney view:nth-child(1)::after{
  content: '';
  position: relative;
  top: -100rpx;
  right: -50rpx;
  border-right: 1px rgb(230, 230, 230) solid;
  height: 100rpx;
}


/* 下面 */
.card-detail-bottom {
  margin-top: 20rpx;
  padding: 20rpx 80rpx;
  background-color: #ffffff;
}
.consumption-details {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.consumption-details>view{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
.consumption-details>view text:nth-child(2) {
  color: rgb(191, 191, 191);
  font-size: 24rpx;
  line-height: 2;
}
.consumption-details>text {
  font-size: 28rpx;
  line-height: 3;
}
