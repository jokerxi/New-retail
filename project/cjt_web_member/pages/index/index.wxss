/**index.wxss**/

/* 头部背景 */

.container-top {
  height: 400rpx;
  background-color: #fff;
}

.con-top-img {
  width: 100%;
  height: 300rpx;
}

.con-top-img image {
  width: 100%;
  height: 100%;
}

/* vip卡片 */

.VIPcard {
  position: absolute;
  top: 30rpx;
  width: 100%;
  height: 400rpx;
}

.card {
  width: 95%;
  text-align: center;
  margin-top: 20rpx;
}

.card-img {
  width: 100%;
  height: 350rpx;
}

.ld-img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 90rpx;
  left: 40rpx;
}

/* 卡片里面的内容 */

.card-text {
  color: #fff;
  position: absolute;
  top: 90rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
  text-indent: 130rpx;
}

.card-text text {
  font-size: 26rpx;
}

.card-text text:nth-child(3) {
  margin-top: 40rpx;
}

.card-text text:nth-child(3) .card-rebate {
  color: rgb(238, 189, 82);
  margin-right: 10rpx;
  font-size: 36rpx;
}

/* 下面 */

.new-promotions {
  background-color: #fff;
  margin: 0 auto;
  text-align: center;
  margin-bottom: -20rpx;
}

.new-promotions image {
  width: 226rpx;
  height: 46rpx;
}

/* 商品 */

.merchandise {
  padding: 20rpx;
  display: flex;
  margin-top: 20rpx;
  background-color: #fff;
}

.merchandise image {
  width: 300rpx;
  height: 300rpx;
}

.merchandise-text {
  display: flex;
  flex-direction: column;
  padding: 0 0 0 20rpx;
  width: 50%;
}

.price {
  display: flex;
  justify-content: space-between;
}

.merchandise-text>text:nth-child(1) {
  font-size: 36rpx;
  margin-bottom: 50rpx;
}

.merchandise-text>text:nth-child(2) {
  color: #fff;
  font-size: 30rpx;
  width: 100rpx;
  height: 50rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  background: linear-gradient(to right, rgb(12, 214, 124), rgb(104, 232, 120));
}

.price text:nth-child(1) {
  color: red;
}

.price text:nth-child(2) {
  color: rgb(102, 102, 102);
}

.merchandise-text>text:nth-child(4) {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}

.merchandise-text>text:nth-child(5) {
  font-size: 24rpx;
  color: rgb(184, 184, 184);
}

.no-data {
  text-align: center;
}

.no-data  image {
  display: block;
  margin: 0 auto;
  padding: 200rpx 0 50rpx 0;
  width: 200rpx;
  height: 200rpx;
}
.no-data text {
  font-size: 30rpx;
  color: rgb(160, 160, 160)
}
