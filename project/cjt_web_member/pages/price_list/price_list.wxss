/* pages/price_list/price_list.wxss */
page{
  background-color: #fff;
}

.price_list {
  display: flex;
  flex-flow: row;
}

.sidebar {
  /* border: 1rpx red solid; */
  height: 1100rpx;
  width: 126rpx;
}

.side_box {
  width: 124rpx;
  height: 274rpx;
  border-bottom: 2rpx #f7f7f7 solid;
  border-right: 2rpx #f7f7f7 solid;
}

.sidebar image {
  width: 100%;
  height: 100%;
}

.list_box {
  flex-grow: 1;
}

.list_top {
  /* text-align: right; */
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 20rpx 0 20rpx;
}

.subscription {
  width: 130rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}

.shop_select {
  /* display: inline-block; */
  padding-bottom: 22rpx;
  margin-left: 50rpx;
}

.shop_box {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 30rpx;
}

.shop_box image {
  width: 24rpx;
  height: 14rpx;
  margin-left: 16rpx;
}

.list_content {
  /* padding: 20rpx 20rpx; */
  position: relative;
}

.content_box {
  /* height: 1000rpx; */
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  /* flex-direction: row; */
  justify-content: space-around;
  /* align-items: center; */
}

.item_box {
  width: 278rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-shadow: 10rpx 10rpx 10rpx #f7f7f7;
  border-radius: 8rpx;
}

.item_img {
  width: 100%;
  height: 247rpx;
}

.item_img image {
  width: 100%;
  height: 100%;
}

.item_title {
  font-size: 26rpx;
  color: #0cd57d;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin: 20rpx;
}

.item_discount>image {
  width: 14rpx;
  height: 18rpx;
}

.item_text {
  color: #333;
  display: flex;
  flex-direction: column;
}

/* 空列表 */

.empty_list {
  /* position: absolute; *//* top:0; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty_list image {
  width: 236rpx;
  height: 232rpx;
  margin: 20rpx auto;
}

.empty_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

/* 下拉框内容 */

.select_box {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  bottom: 0;
  right: 0;
}

.select_shop_img {
  width: 35rpx;
  height: 20rpx;
  margin-left: 80%;
}

.select_box image {
  width: 100%;
  height: 250%;
}

.select_shop {
  background: #fff;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx;
}

.select_item {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #7a7a7a;
}

.select_item:hover {
  background-color: #f7f7f7;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
